@inject NavigationManager NavigationManager
<div id="imageBox">
    @*    <video loop id="videoTop" class="videoloop transparent" muted="muted">
        <source id="videoTopSrc" src="" type="video/mp4">
        </video>

        <video loop id="videoBottom" class="videoloop transparent" muted="muted">
        <source id="videoBottomSrc" src="" type="video/mp4">
