    @if (!string.IsNullOrEmpty(_imgBottom?.SourceUrl))
    {
        <img id="imgBottom" src="@_imgBottom.SourceUrl" class="@_imgBottom.CssClass" style="object-fit:@_imgBottom.Orientation" />
    }
    @if (!string.IsNullOrEmpty(_imgTop?.SourceUrl))
    {
        <img id="imgTop" src="@_imgTop.SourceUrl" class="@_imgTop.CssClass" style="object-fit:@_imgTop.Orientation" />
    }

</div>

@if (DebugMode)
{
    <div class="debug-mode">
        <button @onclick="LoadNextInBackground">Load next</button>
        <button @onclick="ShowNext">Show next</button>
        <table id="debug-items">
            <thead>
                <tr>
                    <th>Item</th>
                    <th>Width</th>
                    <th>Height</th>
                    <th>Orientation</th>
                    <th>File Size (KB)</th>
                </tr>
            </thead>
            <tbody id="debugInfo">
            </tbody>
        </table>
    </div>
}

<div class="menu-footer" @onclick="GotoSettings"></div>

@code {
    private void GotoSettings()
    {
        NavigationManager.NavigateTo("settings", true);
    }
}
